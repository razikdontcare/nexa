{
  "name": "nexa-whatsapp-bot",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "ts-node --transpile-only src/app.ts",
    "dev:bot": "ts-node --transpile-only src/app.ts",
    "dev:web": "npm -C web run dev",
    "dev:all": "concurrently -k -n bot,web -c green,cyan \"npm:dev\" \"npm:web:dev\"",
    "build": "tsc -p .",
    "web:dev": "npm -C web run dev",
    "web:build": "npm -C web run build",
    "scaffold:command": "ts-node tools/scaffold-command.ts",
    "start": "node dist/app.js",
    "postinstall": "npm -C web install"
  },
  "dependencies": {
    "@tavily/core": "^0.5.12",
    "@whiskeysockets/baileys": "^7.0.0-rc.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "groq-sdk": "^0.32.0",
    "mongodb": "^6.19.0",
    "pino": "^9.9.5",
    "pino-pretty": "^13.1.1",
    "qrcode": "^1.5.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "@types/qrcode": "^1.5.5",
    "concurrently": "^8.2.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
